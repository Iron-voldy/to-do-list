{
    "name": "todo-app/backend",
    "description": "To-Do Application Backend API",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "mockery/mockery": "^1.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml --coverage-html coverage --coverage-text",
        "test:unit": "phpunit --configuration phpunit.xml --testsuite unit",
        "test:integration": "phpunit --configuration phpunit.xml --testsuite integration"
    }
}
